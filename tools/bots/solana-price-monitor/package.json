{
  "name": "solana-price-monitor",
  "version": "1.0.0",
  "description": "CLI tool to monitor Solana token prices and fire alerts on significant moves",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "bot": "node dist/telegram-bot.js",
    "dev": "tsc && node dist/index.js",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "solana",
    "crypto",
    "price",
    "monitor",
    "alerts"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-telegram-bot-api": "^0.64.13",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "dotenv": "^17.2.3",
    "node-telegram-bot-api": "^0.67.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
